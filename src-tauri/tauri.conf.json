{
  "$schema": "https://raw.githubusercontent.com/nicklasxyz/tauri-v2-schema/main/tauri.conf.schema.json",
  "productName": "ccnotify",
  "version": "0.1.0",
  "identifier": "com.ccnotify.dev",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "label": "main",
        "title": "ccnotify",
        "width": 380,
        "height": 500,
        "decorations": false,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "visible": true,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "tooltip": "ccnotify"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
